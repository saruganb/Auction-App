@model AuctionApp.ViewModels.BidVM

@{
    ViewData["Title"] = "Add Bid";
    var Id = (int)ViewData["Id"];
}

<h1>AddBid</h1>

<h4>BidVM</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddBid">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div hidden>
                <input asp-for="@Id"/>
            </div>
           <div class="form-group">
                <label asp-for="BidPrice" class="control-label"></label>
                <input asp-for="BidPrice" class="form-control" />
                <span asp-validation-for="BidPrice" class="text-danger"></span>
            </div>
          
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="AllAuctions">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
